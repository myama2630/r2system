<h1>ビジネスステータス一覧</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>ステータス</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @businessstatuses.each do |businessstatus| %>
      <tr>
        <td><%= businessstatus.name %></td>
        <td><%= link_to '詳細', businessstatus, class: "workregist_show" %></td>
        <td><%= link_to '編集', edit_businessstatus_path(businessstatus), class: "workregist_edit" %></td>
        <td><%= link_to '削除', businessstatus, method: :delete, data: { confirm: 'Are you sure?' } , class: "workregist_del"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

