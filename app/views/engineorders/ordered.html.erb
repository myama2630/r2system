      <%= p.hidden_field :company_id, :value => current_user.company_id, :id => :sending_company %>
    <% end %>
  </div>

  <div class="field">
    <!-- Gem "need label"では対応できないので、直接クラスを設定しています -->
    <%= f.label :sending_comment %><br>
    <%= f.text_area :sending_comment %>
