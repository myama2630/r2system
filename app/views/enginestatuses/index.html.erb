<h1>エンジンステータス一覧</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>ステータス</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @enginestatuses.each do |enginestatus| %>
      <tr>
        <td><%= enginestatus.name %></td>
        <td><%= link_to '詳細', enginestatus , class: "workregist_show" %></td>
        <td><%= link_to '編集', edit_enginestatus_path(enginestatus) , class: "workregist_edit" %></td>
        <td><%= link_to '削除', enginestatus, method: :delete, data: { confirm: 'Are you sure?' } , class: "workregist_del" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

